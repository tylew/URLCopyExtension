{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.1",

    "permissions": ["activeTab", "clipboardWrite", "tabs", "scripting"],

    "host_permissions": ["<all_urls>"],
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
